@using MiPrimeraAplicacionWeb.Models
@model List<MarcaCLS>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Adicionar", "Adicionar", null, new {@class="btn btn-primary"})


<table class="table table-bordered table-hover">
  
    <thead>
        <tr>
    
            <td width="10%">@Html.LabelFor(p => Model[0].iidmarca)</td>
            <td width="30%">@Html.LabelFor(p=>Model[0].nombre)</td>
            <td width="60%">@Html.LabelFor(p=>Model[0].descripcion)</td>
        </tr>
    </thead>
   
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.iidmarca</td>
            <td>@item.nombre</td>
            <td>@item.descripcion</td>
        </tr>

        }
    </tbody>

</table>



<button>Si pulsas aca ocultaras la tabla</button>

