@using MiPrimeraAplicacionWeb.Models
@model BusCLS
@{
    ViewBag.Title = "Adicionar";
}

<h2>Adicionar</h2>

<div class="row">

    <div class="col-md-6">
    
        @using (Html.BeginForm("Adicionar", "Bus", FormMethod.Post))
        {
        <div>
            @Html.LabelFor(p => p.TipoBus)
            @Html.DropDownListFor(m => m.idTipobus, (SelectList)ViewBag.tipobus, "Seleccionar", new { @class = "form-control" })



        </div>

            <div>
                <button class="btn btn-danger">Aceptar</button>
            </div>
        }
    </div>
</div>
